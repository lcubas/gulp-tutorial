doctype
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=z, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title Olas Perú
        link(rel="shortcut icon", href="../assets/images/icon.png", type="image/png")
        link(rel="stylesheet", href="css/main.min.css")
    body
        header
            nav.navbar.navbar-default.navbar-fixed-top
                div.container-fluid
                    div.navbar-header
                        button.navbar-toggle.collapsed(data-toggle="collapse")
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        div.logo
                            a(href="#logo")
                                img(sr="../assets/images/logo.png")
                    div.collapse.navbar-collapse#navbar-collapse-1
                        ul.nav.navbar-nav
                            li
                                a(href="#nosotros") NOSOTROS
                            li
                                a(href="#nosotros") ACTIVIDADES
                            li
                                a(href="#nosotros") PAQUETES
                        ul.nav.navbar-nav.navbar-right
                            li
                                a(href="#mapa") UBÍCANOS
                            li.dropdown
                                a(href="#", class="dropdown-toggle", data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false") CONTÁCTO
                                    span.caret
                                ul.dropdown-menu
                                    li
                                        a(href="#contacto") CONTÁCTO
        div#myCarousel.carousel.slide(data-ride="carousel")
            ol.carousel-indicators
                li(data-target="#myCarousel", data-slide-to="0", class="active")
                li(data-target="#myCarousel", data-slide-to="1")
                li(data-target="#myCarousel", data-slide-to="2")
                li(data-target="#myCarousel", data-slide-to="3")
            div.carousel-inner(role="listbox")
                div.item.active
                    img(src="../assets/images/banner-1.jpg", alt="Chania")
                div.item
                    img(src="../assets/images/banner-2.jpg", alt="Chania")
                div.item
                    img(src="../assets/images/banner-3.jpg", alt="Flower")
            a.left.carousel-control(href="#myCarousel", role="button", data-slide="prev")
                span.glyphicon.glyphicon-chevron-left(aria-hidden="true")
                span.sr-only Previous
            a.right.carousel-control(href="#myCarousel", role="button", data-slide="next")
                span.glyphicon.glyphicon-chevron-right(aria-hidden="true")
                span.sr-only Next
    script(src="js/main.min.js")